{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir":"./dist",
    "declaration": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "lib": [
      "es2015",
      "scripthost",
      "dom"
    ]
  },
  "exclude": [ "dist" ],
  "include": [ "src/**/*" ]
}
